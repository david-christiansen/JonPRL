squash =def= [λ(A. subset(unit; _. A))].

Theorem squash-wf : [∀(U{i}; A. ∈(ap(squash;A); U{i}))] {
  unfold <squash>; auto; cum.
}.

Theorem squash-intro : [∀(U{i}; A. Π(A; M. ap(squash; A)))] {
  unfold <squash>; auto;
  subset-intro [<>]; auto.
}.

Theorem sq-test : [∀(U{i'}; A. ∈(ap(squash;A);U{i'}))] {
  lemma <squash-wf>.
}.
